<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="adpter_sort_son_fragment"
            type="com.example.shop.bean.sort.SortData.SubCategory" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sort_son_img_good"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/sort_son_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{adpter_sort_son_fragment.name}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sort_son_img_good"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>